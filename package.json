{
  "name": "zotero-publications",
  "license": "AGPL-3.0",
  "version": "0.5.3",
  "description": "Library to display \"My Publications\" from Zotero in a user friendly way.",
  "repository": "https://github.com/zotero/publications.git",
  "main": "lib/zotero-publications.js",
  "scripts": {
    "build": "run-s \"build:all\" \"build:postprocess\"",
    "build:all": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s'",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:js": "mkdir -p build/static && NODE_ENV=production browserify -s ZoteroPublications --extension=.tpl src/js/main.js -t [ node-underscorify --extensions tpl --requires '[{variable: \\'_\\', module: \\'lodash\\'}]'' ] -t [babelify] -g uglifyify | terser --compress --mangle > build/static/zotero-publications.js",
    "build:postprocess": "postcss build/static/zotero-publications.css --use autoprefixer --no-map -r",
    "build:scss": "for f in src/scss/*.scss; do node-sass --include-path ./node_modules/ $f --output-style compressed --output build/static/; done;",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "clean": "rimraf build lib",
    "devel:js": "NODE_ENV=development watchify -s ZoteroPublications --extension=.tpl src/js/main.js -d -v -t [ node-underscorify --extensions tpl --requires '[{variable: \\'_\\', module: \\'lodash\\'}]'' ] -t [babelify] -o build/static/zotero-publications.js",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass --include-path ./node_modules/ $f  --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "start": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "makelib": "mkdir -p lib/ && cp build/static/zotero-publications.{css,js} lib/",
    "prepack": "run-s build makelib",
    "postpack": "rimraf lib",
    "test": "./node_modules/.bin/karma start",
    "serve": "npm-run serve -l 8001 build",
    "eslint": "eslint \"src/js/**/*.js\" || true",
    "test-once": "./node_modules/.bin/karma start --single-run || exit 0"
  },
  "files": [
    "dist/*",
    "lib/*"
  ],
  "dependencies": {
    "babel-regenerator-runtime": "^6.5.0",
    "balanced-match": "^1.0.0",
    "clipboard": "^2.0.6",
    "core-js": "^3.6.5",
    "es6-symbol": "^3.1.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.20",
    "primer-tooltips": "^2.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "browserify-istanbul": "^3.0.1",
    "eslint": "^7.7.0",
    "jasmine-core": "^3.6.0",
    "karma": "^5.1.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-browserify": "^7.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-coveralls": "^2.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-matchers": "^4.0.2",
    "karma-source-map-support": "^1.4.0",
    "node-sass": "^4.14.1",
    "node-underscorify": "0.0.14",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "run-sequence": "^2.2.1",
    "serve": "^11.3.2",
    "terser": "^5.2.1",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
